<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.helloandroid.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/address"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="89dp"
        android:layout_marginLeft="102dp"
        android:layout_marginStart="102dp"
        android:contentDescription="@string/a_blue_mountain_sky"
        android:scaleType="centerCrop"
        android:src="@drawable/mountain_view" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="15dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:contentDescription="@string/udacity_logo"
            android:padding="10dp"
            android:scaleType="centerInside"
            android:src="@drawable/udacity_ow1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="8dp"
            android:text="@string/expand_your_views"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textAppearance="?android:textAppearanceLargeInverse" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="8dp"
            android:text="@string/develop_your_future"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textAppearance="?android:textAppearanceLargeInverse" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:autoLink="web"
            android:drawableLeft="@drawable/ic_public_white_18dp"
            android:drawablePadding="3dp"
            android:drawableStart="@drawable/ic_public_white_18dp"
            android:gravity="start"
            android:text="@string/udacity"
            android:textAlignment="textStart"
            android:textColorLink="@color/link_color"
            android:textSize="@dimen/text_link" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoLink="map"
            android:drawableLeft="@drawable/ic_location_on_white_18dp"
            android:drawablePadding="3dp"
            android:drawableStart="@drawable/ic_location_on_white_18dp"
            android:gravity="start"
            android:text="@string/address"
            android:textAlignment="textStart"
            android:textColorLink="@color/link_color"
            android:textSize="@dimen/text_link" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoLink="phone"
            android:drawableLeft="@drawable/ic_phone_white_18dp"
            android:drawableStart="@drawable/ic_phone_white_18dp"
            android:gravity="start"
            android:text="@string/phone_number"
            android:textAlignment="textStart"
            android:textColorLink="@color/link_color"
            android:textSize="@dimen/text_link" />

    </LinearLayout>

</RelativeLayout>

